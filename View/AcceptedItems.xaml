<Window x:Class="StoreHouse.View.AcceptedItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreHouse.View"
        mc:Ignorable="d"
        Title="Принятые товары" Height="450" Width="903">
    <Grid>
        <DataGrid x:Name="grid" Margin="0,0,269,0">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="На склад" Click="toStoreClick"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <Button x:Name="showItems" Content="Показать товары" HorizontalAlignment="Left" Margin="685,76,0,0" VerticalAlignment="Top" Width="151" Click="showItems_Click"/>
        <Button x:Name="goToStore" Content="Перейти на склад" HorizontalAlignment="Left" Margin="685,123,0,0" VerticalAlignment="Top" Width="151" Click="goToStore_Click"/>
        <Button x:Name="goToSoldItems" Content="Перейти на Проданные" HorizontalAlignment="Left" Margin="685,169,0,0" VerticalAlignment="Top" Width="151" Click="goToSoldItems_Click"/>
        <Button x:Name="addItem" Content="Добавить товар" HorizontalAlignment="Left" Margin="703,217,0,0" VerticalAlignment="Top" Width="117" Click="addItem_Click"/>

    </Grid>
</Window>
