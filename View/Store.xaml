<Window x:Class="StoreHouse.View.Store"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreHouse.View"
        mc:Ignorable="d"
        Title="Склад" Height="450" Width="875">
    <Grid>
        <DataGrid x:Name="grid" Margin="0,0,231,0">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Продать" Click="sold_click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <Button x:Name="showItems" Content="Показать товары" HorizontalAlignment="Left" Margin="705,72,0,0" VerticalAlignment="Top" Width="151" Click="showItems_Click"/>
        <Button x:Name="goToAcceptedItems" Content="Перейти на Принятые" HorizontalAlignment="Left" Margin="705,119,0,0" VerticalAlignment="Top" Width="151" Click="goToAcceptedItems_Click"/>
        <Button x:Name="goToSoldItems" Content="Перейти на Проданные" HorizontalAlignment="Left" Margin="705,165,0,0" VerticalAlignment="Top" Width="151" Click="goToSoldItems_Click"/>
        <Button x:Name="report" Content="Отчет" HorizontalAlignment="Left" Margin="752,217,0,0" VerticalAlignment="Top" Width="56" Click="report_Click"/>
    </Grid>
</Window>
